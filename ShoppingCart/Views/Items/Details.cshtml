@model ShoppingApp.Models.Item

@{
    ViewBag.Title = "Details";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <h3>@Model.Name</h3>


    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-4">

                <img src="@Url.Content(Model.MediaUrl)" />
            </div>
            <dvi class="col-md-8">
                <h4>@Html.DisplayFor(model => model.Name)</h4>
                <br />
                @Html.DisplayFor(model => model.Price)
                <br />
                @Html.Raw(Model.Description)

                <br />
                <strong>@Html.DisplayNameFor(model => model.Created) :</strong> @Html.DisplayFor(model => model.Created)
                <br />
                <strong>@Html.DisplayNameFor(model => model.Updated) :</strong> @Html.DisplayFor(model => model.Updated)
                <br />
                @Html.ActionLink("Add To Cart", "AddToCart", "ShoppingCarts", new { id = Model.Id }, "")
                <br />

            </dvi>
        </div>
    </div>

</div>
<p>
    @if (User.IsInRole("Admin"))
{
    <text>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    </text>}

        @Html.ActionLink("Back to List", "Index")
    </p>
